<% include ../partials/header %>
<% include ../partials/main-menu %>
<% include ../partials/flash-message %>

<div class="ui container">
  
  <h2 class="ui center aligned header">
      <div>Gebruiker updaten</div>
  </h2>
  <h5>Gegevens huidige gebruiker</h5>
  <p>Naam: <%= user.firstName %> <%= user.lastName %></p>
  <p>Rol: <%= user.role%></p>
  <p>School: <%= school.schoolIdNumber %> - <%= school.name %> - <%= school.city %></p>
  
  <div class="ui divider"></div>

  <div class="ui grid">
    <div class="six wide column">
      <h3>Gebruikersniveaus</h3>
      <p>School user = school medewerker = suser</p>
      <p>School admin = school administrator = sadmin</p>
      <p>Bestuur user = bestuur medewerker = buser</p>
    </div>
    <div class="six wide column">
      <h3>Gebruikersniveaus die niet aanpasbaar zijn op deze pagina</h3>
      <p>Bestuur admin = bestuur administrator = badmin</p>
      <p>Pillars admin = pillars adminitrator = padmin</p>
    </div>
    <div class="four wide column">
      <h3>School</h3>
      <p>Laat school leeg als je deze niet wilt aanpassen!</p>  
    </div>
  </div>
  

  <form class="ui form" action="/admin/update-user" method="POST">
    <input type="hidden" value="<%=user._id%>" name="userId">
    <div class="two fields">
      <div class="field">
          <label>Rol</label>
          <div class="ui selection dropdown">
              <input type="hidden" name="role" value="<%=user.role%>">
              <div class="text"><%=user.role%></div>
              <i class="dropdown icon"></i>
              <div class="menu">
                  <% ["sadmin", "suser", "buser"].forEach(function(type){%>
                    <div class="item <%if(type===user.role){%>active<%}%>"
                        data-value="<%=type%>"
                      <% if(type===user.role){ %> selected="" <% } %> >
                          <%=type%>
                    </div>
                  <%})%>
              </div>
          </div>
      </div>
      <div class="field">
          <label>School</label>
          <div class="ui selection dropdown">
              <input type="hidden" name="school">
              <div class="text"><%=user.org%></div>
              <i class="dropdown icon"></i>
              <div class="menu">
                  <% schools.forEach(function(school){%>
                    <div class="item"
                        data-value="<%=school._id%>">
                          <%=school.schoolIdNumber%> <%=school.name%> <%=school.city%>
                    </div>
                  <%})%>
              </div>
          </div>
      </div>
      <input type="hidden" name="previousSchool" value="<%=school._id%>">
    </div>
    <button class="ui button" type="submit">Bewaren</button>
  </form>

</div>

<% include ../partials/footer %>
