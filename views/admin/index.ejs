<% include ../partials/school/header %>

<div class="ui container">
  
  <h2 class="ui center aligned header">
      <div>Pillars Admin</div>
  </h2>
  
   <table class="ui celled small table">
      <thead>
        <tr>
          <th>Instellingsnaam</th>
          <th>Eigenaar record</th>
          <th>Email</th>
          <th>Algemene info</th>
          <th>Hardware</th>
          <th>Digitale Leermiddelen</th>
          <th>Deskundigheid</th>
          <th>Organisatie</th>
          <th>Medewerkers</th>
        </tr>
      </thead>
      <tbody>
        <% schools.forEach(function(school){ %>
            <tr>
              <td><a href="/scholen/<%=school._id%>"><%=school.instellingsnaam%></a></td>
              <td><%=school.owner.firstName%> <%=school.owner.lastName%></td>
              <td class="right aligned" ><%= school.owner.username %></td>
              <td class="center aligned"><% if(school.isIngevuldAlgemeneInformatie){ %> <i class="large green checkmark icon"></i> <% } %> </td>
              <td class="center aligned"><% if(school.isToegevoegdHardware){ %> <i class="large green checkmark icon"></i> <% } %> </td>
              <td class="center aligned"><% if(school.isToegevoegdSoftware){ %> <i class="large green checkmark icon"></i> <% } %> </td>
              <td class="center aligned"><% if(school.isIngevuldDeskundigheid){ %> <i class="large green checkmark icon"></i> <% } %> </td>
              <td class="center aligned"><% if(school.isIngevuldOrganisatie){ %> <i class="large green checkmark icon"></i> <% } %> </td>
              <td class="center aligned"><% if(school.isToegevoegdMedewerker){ %> <i class="large green checkmark icon"></i> <% } %> </td>
            </tr>
        <% }) %>
      </tbody>
    </table>
</div>