<% include ../partials/header %>

<div class="ui main text container">
    <div class="ui huge header">School uit DUO Database Toevoegen</div>
    
    <form class="ui form" action="/scholen" method="POST">
         <h4 class="ui dividing header">School Invoeren</h4>
         <div class="two fields">
            <div class="field">
                <label>BRIN nummer</label>
                <input type="text" name="school[brin]" value="<%= scholen[0]['BRIN NUMMER'] %>">
            </div>
            <div class="field">
                <label>Bevoegd gezag nummer</label>
                <input type="text" name="school[bevoegdGezag]" value="<%= scholen[0]['BEVOEGD GEZAG NUMMER'] %>">
            </div>
          </div>
          <div class="field">
            <label>Instellingsnaam</label>
            <input type="text" name="school[instellingsnaam]" value="<%= scholen[0]['INSTELLINGSNAAM'] %>">
          </div>
          <div class="field">
            <label>Adres</label>
                <div class="fields">
                  <div class="twelve wide field">
                    <input type="text" name="school[straatnaam]" value="<%= scholen[0]['STRAATNAAM'] %>">
                  </div>
                  <div class="four wide field">
                    <input type="text" name="school[huisnummer]" value="<%= scholen[0]['HUISNUMMER-TOEVOEGING'] %>">
                  </div>
                </div>
          </div>
          <div class="field">
            <label>Postcode en Plaatsnaam</label>
                <div class="fields">
                    <div class="four wide field">
                        <input type="text" name="school[postcode]" value="<%= scholen[0]['POSTCODE'] %>">
                    </div>
                    <div class="twelve wide field">
                        <input type="text" name="school[plaatsnaam]" value="<%= scholen[0]['PLAATSNAAM'] %>">
                    </div>
                </div>
          </div>
          <div class="two fields">
            <div class="field">
                <label>Aantal leerlingen</label>
                <input type="number" name="school[aantalLeerlingen]" placeholder="Aantal leerlingen">
            </div>
            <div class="field">
                <label>Aantal klaslokalen</label>
                <input type="number" name="school[aantalKlaslokalen]" placeholder="Aantal klaslokalen">
            </div>
          </div>
          <div class="two fields">
            <div class="field">
                <div class="ui toggle checkbox">
                    <input type="checkbox" name="school[heeftGoedBedraadNetwerk]">
                    <label>Bedraad Netwerk Werkt Snel en Betrouwbaar</label>
                 </div>
            </div>
            <div class="field">
                <div class="ui toggle checkbox">
                    <input type="checkbox" name="school[heeftGoedWirelessNetwerk]">
                    <label>Wireless Netwerk Werkt Snel en Betrouwbaar</label>
                 </div>
            </div>
          </div>
          <button class="ui button" type="submit">Bewaren</button>
    </form>
</div>

<% include ../partials/footer %>