<% include ../partials/school/header %>

<div class="ui container" id="flash-message">
    <div class="ui green message">
        School gevonden in DUO database. Vul het aantal leerlingen en klaslokalen in en bewaar de school.
    </div>
</div>

<div class="ui main text container">
    <div class="ui huge header">School uit DUO Database Toevoegen</div>
    
    <form class="ui form" action="/scholen" method="POST">
         <h4 class="ui dividing header">School Invoeren</h4>
         <div class="two fields">
            <div class="disabled field">
                <label>BRIN nummer</label>
                <input type="text" name="school[brin]" value="<%= school['BRIN NUMMER'] %>">
            </div>
            <div class="disabled field">
                <label>Bevoegd gezag nummer</label>
                <input type="text" name="school[bevoegdGezag]" value="<%= school['BEVOEGD GEZAG NUMMER'] %>">
            </div>
          </div>
          <div class="disabled field">
            <label>Instellingsnaam</label>
            <input type="text" name="school[instellingsnaam]" value="<%= school['INSTELLINGSNAAM'] %>">
          </div>
          <div class="disabled field">
            <label>Adres</label>
                <div class="fields">
                  <div class="twelve wide field">
                    <input type="text" name="school[straatnaam]" value="<%= school['STRAATNAAM'] %>">
                  </div>
                  <div class="four wide field">
                    <input type="text" name="school[huisnummer]" value="<%= school['HUISNUMMER-TOEVOEGING'] %>">
                  </div>
                </div>
          </div>
          <div class="disabled field">
            <label>Postcode en Plaatsnaam</label>
                <div class="fields">
                    <div class="four wide field">
                        <input type="text" name="school[postcode]" value="<%= school['POSTCODE'] %>">
                    </div>
                    <div class="twelve wide field">
                        <input type="text" name="school[plaatsnaam]" value="<%= school['PLAATSNAAM'] %>">
                    </div>
                </div>
          </div>
          <div class="two fields">
            <div class="field">
                <label>Aantal leerlingen</label>
                <input type="number" name="school[aantalLeerlingen]" placeholder="Aantal leerlingen">
            </div>
            <div class="field">
                <label>Aantal klaslokalen</label>
                <input type="number" name="school[aantalKlaslokalen]" placeholder="Aantal klaslokalen">
            </div>
          </div>
          <div class="two fields">
            <div class="field">
                <div class="ui toggle checkbox">
                    <input type="checkbox" name="school[heeftGoedBedraadNetwerk]">
                    <label>Bedraad Netwerk Werkt Snel en Betrouwbaar</label>
                 </div>
            </div>
            <div class="field">
                <div class="ui toggle checkbox">
                    <input type="checkbox" name="school[heeftGoedWirelessNetwerk]">
                    <label>Wireless Netwerk Werkt Snel en Betrouwbaar</label>
                 </div>
            </div>
          </div>
          <button class="ui button" type="submit">Bewaren</button>
    </form>
</div>

<% include ../partials/school/footer %>
