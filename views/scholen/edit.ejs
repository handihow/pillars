<% include ../partials/header %>
<% include ../partials/side-header %>

<div class="fourteen wide stretched column">
    <div class="ui segment">
      <h2 class="ui top attached header"><%= school.instellingsnaam %></h2>
    
    <form class="ui form" action="/scholen/<%=school._id%>?_method=PUT" method="POST">
         <h4 class="ui dividing header">School Bewerken</h4>
         <div class="two fields">
            <div class="field">
                <label>BRIN nummer</label>
                <input type="text" name="school[brin]" value="<%=school.brin%>">
            </div>
            <div class="field">
                <label>Bevoegd gezag nummer</label>
                <input type="text" name="school[bevoegdGezag]" value="<%=school.bevoegdGezag%>">
            </div>
          </div>
          <div class="field">
            <label>Instellingsnaam</label>
            <input type="text" name="school[instellingsnaam]" value="<%=school.instellingsnaam%>">
          </div>
          <div class="field">
            <label>Adres</label>
                <div class="fields">
                  <div class="twelve wide field">
                    <input type="text" name="school[straatnaam]" value="<%=school.straatnaam%>">
                  </div>
                  <div class="four wide field">
                    <input type="text" name="school[huisnummer]" value="<%=school.huisnummer%>">
                  </div>
                </div>
          </div>
          <div class="field">
            <label>Postcode en Plaatsnaam</label>
                <div class="fields">
                    <div class="four wide field">
                        <input type="text" name="school[postcode]" value="<%=school.postcode%>">
                    </div>
                    <div class="twelve wide field">
                        <input type="text" name="school[plaatsnaam]" value="<%=school.plaatsnaam%>">
                    </div>
                </div>
          </div>
          <div class="two fields">
            <div class="field">
                <label>Aantal leerlingen</label>
                <input type="number" name="school[aantalLeerlingen]" value="<%=school.aantalLeerlingen%>">
            </div>
            <div class="field">
                <label>Aantal klaslokalen</label>
                <input type="number" name="school[aantalKlaslokalen]" value="<%=school.aantalKlaslokalen%>">
            </div>
          </div>
          <div class="two fields">
            <div class="field">
                <input type="hidden" value="0" name="school[heeftGoedBedraadNetwerk]">
                <div class="ui toggle checkbox">
                    <input 
                        type="checkbox" 
                        name="school[heeftGoedBedraadNetwerk]"
                        <% if(school.heeftGoedBedraadNetwerk) { %>
                        checked="checked"
                        <% } %>
                    >
                    <label>Bedraad Netwerk Werkt Snel en Betrouwbaar</label>
                 </div>
            </div>
            <div class="field">
                <div class="ui toggle checkbox">
                    <input type="hidden" value="0" name="school[heeftGoedWirelessNetwerk]">
                    <input 
                        type="checkbox" 
                        name="school[heeftGoedWirelessNetwerk]"
                        <% if(school.heeftGoedWirelessNetwerk) { %>
                        checked="checked"
                        <% } %>
                    >
                    <label>Wireless Netwerk Werkt Snel en Betrouwbaar</label>
                 </div>
            </div>
          </div>
          <button class="ui button" type="submit">Bewaren</button>
        </form>
    </div>
</div>

<% include ../partials/side-footer %>
<% include ../partials/footer %>