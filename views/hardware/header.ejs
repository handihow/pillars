<h2 class="ui centered header">Hardware</h2>
<div class="ui icon buttons">
  <a class="ui <%if(url===("/schools/"+school._id+"/hardware")){ %> active <%}%> button" 
      href="/schools/<%=school._id%>/hardware" 
      data-content="Kaarten met totalen">
      <i class="th icon"></i>
  </a>
  <a class="ui <%if(url===("/schools/"+school._id+"/hardware/list")){ %> active <%}%> button" 
      href="/schools/<%=school._id%>/hardware/list"
      data-content="Lijst met hardware">
        <i class="list icon"></i>
  </a>
  <a class="ui <%if(url===("/schools/"+school._id+"/hardware/budget")){ %> active <%}%> button" 
      href="/schools/<%=school._id%>/hardware/budget"
      data-content="Budget berekenen">
      <i class="euro sign icon"></i>
  </a>
  <a class="ui <%if(url===("/schools/"+school._id+"/hardware/charts")){ %> active <%}%> button" 
      href="/schools/<%=school._id%>/hardware/charts"
      data-content="Grafieken">
      <i class="chart pie icon"></i>
  </a>
</div>
<% if(!(currentUser.role==="suser")) { %>
  <div class="ui icon buttons">
    <a class="ui <%if(url===("/schools/"+school._id+"/hardware/csv-import")){ %> active <%}%> button" 
        href="/schools/<%=school._id%>/hardware/csv-import"
        data-content="Upload lijst met hardware">
        <i class="upload icon"></i>
    </a>
    <a class="ui <%if(url===("/schools/"+school._id+"/hardware/download")){ %> active <%}%> button" 
        href="/schools/<%=school._id%>/hardware/download"
        data-content="Download Excel format lijst hardware">
        <i class="download icon"></i>
    </a>
    <a class="ui <%if(url===("/schools/"+school._id+"/hardware/settings")){ %> active <%}%> button" 
        href="/schools/<%=school._id%>/hardware/settings"
        data-content="Hardware settings">
        <i class="settings icon"></i>
    </a>
  </div>
  <div class="ui dropdown item">
      <a class="ui icon button" data-content="Hardware toevoegen"><i class="add icon"></i></a>
      <div class="menu">
        <a class="item" href="/schools/<%=school._id%>/hardware/new/short">
          Snel toevoegen
        </a>
        <a class="item" href="/schools/<%=school._id%>/hardware/new/long">
          Uitgebreid toevoegen
        </a>
      </div>
  </div>
<%}%>
