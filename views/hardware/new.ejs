<% include ../partials/header %>
<% include ../partials/main-menu %>
<% include ../partials/flash-message %>
<% include ../partials/school-header %>


<h2 class="ui header"><%= type %> Toevoegen aan <%= school.name %></h2>
<div class="ui divider"></div>

<form class="ui form" action="/schools/<%=school._id%>/hardware" method="POST" id="hardwareForm">
  <div class="two fields">
    <div class="required field">
      <label>Naam</label>
      <input type="text" name="hardware[name]" placeholder="Hardware name" id="hardware[name]">
    </div>
    <div class="hidden field">
      <input type="text" name="hardware[type]" value="<%= type %>" hidden=true>
    </div>
  </div>
  <div class="field">
    <div class="fields">
      <div class="four wide field">
        <label>Merk</label>
        <input type="text" name="hardware[brand]" placeholder="Merk">
      </div>
      <div class="twelve wide field">
        <label>Model</label>
        <input type="text" name="hardware[model]" placeholder="Model">
      </div>
    </div>
  </div>
  <div class="field">
    <div class="fields">
      <div class="four wide field">
        <label>Serial/Tag number</label>
        <input type="text" name="hardware[serialTag]" placeholder="Serial/Tag nummer">
      </div>
      <div class="four wide field">
        <label>Processor</label>
        <input type="text" name="hardware[processor]" placeholder="Processor">
      </div>
      <% if(type==="Desktop"||type==="Multipoint computer"||type==="Laptop") { %>
      <div class="four wide field required">
        <label>Werkgeheugen (GB)</label>
        <input type="number" name="hardware[memory]" placeholder="Werkgeheugen" id="hardware[memory]">
      </div>
      <% } %>
      <div class="four wide field required">
        <label>Jaar van ingebruikname</label>
        <input type="number" name="hardware[deploymentYear]" placeholder="Jaar ingebruikname" id="hardware[deploymentYear]">
      </div>
    </div>
  </div>
  <% if(type === "Multipoint computer") { %>
  <div class="six wide required field">
    <label>Aantal multipoint werkplekken</label>
    <input type="number" name="hardware[numberWorkPlacesMultipoint]" placeholder="Aantal multipoint werkplekken" id="hardware[numberWorkPlacesMultipoint]">
  </div>
  <% } %>
  <% if(type === "Digitaal schoolbord") { %>
  <div class="inline field">
    <div class="ui toggle checkbox">
      <input type="checkbox" tabindex="0" name="hardware[isTouchscreenDigibord]">
      <label>Heeft Touchscreen Beeldscherm</label>
    </div>
  </div>
  <div class="six wide field">
    <label>Beelddiagonaal in inch</label>
    <input type="number" name="hardware[screensizeDigibord]" placeholder="Schermgrootte (inch)">
  </div>
  <% } %>
  <div class="two fields">
    <div class="field">
      <label>Leverancier</label>
      <input type="text" name="hardware[supplier]" placeholder="Leverancier" id="hardware[supplier]">
    </div>
    <div class="field">
      <label>Garantievorm</label>
      <input type="text" name="hardware[warranty]" placeholder="Garantievorm" id="hardware[warranty]">
    </div>
  </div>
  <button class="ui button" type="submit">Bewaren</button>
  <div class="ui error message"></div>
</form>
</div>

<% include ../partials/school-footer %>
<% include ../partials/footer %>