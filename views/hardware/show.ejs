<%- include('../partials/header') %>
<%- include('../partials/main-menu') %>
<%- include('../partials/flash-message') %>

<div class="ui container">
<h2 class="ui header"><i class="desktop icon"></i></i><%= hardware.type %> - <%= hardware.name %></h2>
<div class="ui divider"></div>
<div class="ui stackable grid">
  <div class="four wide column">
    <h4 class="content">Naam</h4> 
    <div class="content"><%= hardware.name %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Type Hardware</h4>
    <div class="content"><%= hardware.type %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Merk</h4>
    <div class="content"><%= hardware.brand %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Model</h4>
    <div class="content"><%= hardware.model %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Serial / Tag</h4>
    <div class="content"><%= hardware.serialTag %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Processor</h4>
    <div class="content"><%= hardware.processor %></div>
  </div>
  <% if(hardware.type==="Desktop"||hardware.type==="Multipoint computer"||hardware.type==="Laptop" ||hardware.type==="Chromebook") { %>
  <div class="four wide column">
    <h4 class="content">Werkgeheugen (GB)</h4>
    <div class="content"><%= hardware.memory %></div>
  </div>
  <% } %>
  <div class="four wide column">
    <h4 class="content">Jaar ingebruikname</h4>
    <div class="content"><%= hardware.deploymentYear %></div>
  </div>
  <% if(hardware.type==="Multipoint computer") { %>
  <div class="four wide column">
    <h4 class="content">Aantal werkplekken</h4>
    <div class="content"><%= hardware.numberWorkPlacesMultipoint %></div>
  </div>
  <% } %>
  <% if(hardware.type==="Digitaal schoolbord") { %>
  <div class="four wide column">
    <h4 class="content">Is Touchscreen</h4>
    <div class="content">
      <% if(hardware.isTouchscreenDigibord) { %>
      Ja
      <% } else { %>
      Nee
      <% } %>
    </div>
  </div>
  <div class="four wide column">
    <h4 class="content">Schermgrootte (inch)</h4>
    <div class="content"><%= hardware.screensizeDigibord %></div>
  </div>
  <% } %>
  <div class="four wide column">
    <h4 class="content">Leverancier</h4>
    <div class="content"><%= hardware.supplier %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Garantievorm</h4>
    <div class="content"><%= hardware.warranty %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Besturingssysteem</h4>
    <div class="content"><%= hardware.operatingSystem %></div>
  </div>    
  <div class="four wide column">
    <h4 class="content">Kosten</h4>
    <div class="content">€ <%= hardware.cost %></div>
  </div>
  <div class="four wide column">
    <h4 class="content">Afschrijven (na jaren)</h4>
    <div class="content"><%= hardware.depreciationPeriod %></div>
  </div>
  <%if(hardware.cost && hardware.depreciationPeriod) {%>
    <div class="four wide column">
      <h4 class="content">Afschrijving per jaar</h4>
      <div class="content">€ <%= Math.round(hardware.cost / hardware.depreciationPeriod) %></div>
    </div>
    <div class="four wide column">
      <h4 class="content">Afgeschreven in jaar</h4>
      <div class="content"><%= hardware.depreciationPeriod + hardware.deploymentYear %></div>
    </div>
    
  <% } %>
    <div class="four wide column">
      <h4 class="content">Locatie device</h4>
      <div class="content"><%= hardware.location %></div>
    </div>
    <div class="four wide column">
      <h4 class="content">Functie device</h4>
      <div class="content"><%= hardware.functionsAs %></div>
    </div>
    <div class="four wide column">
      <h4 class="content">Toegevoegd op</h4>
      <div class="content"><%=hardware.created.toJSON().slice(0,10).split('-').reverse().join('/')%> </div>
    </div>
</div>
<div class="ui divider"></div>
<button type="button" class="ui button" onclick="goBack()">Terug</button>

<%- include('../partials/footer') %>