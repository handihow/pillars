<% include ../partials/header %>
<% include ../partials/main-menu %>
<% include ../partials/flash-message %>

<div class="ui container">
    <h2 class="ui center aligned header">
      <div>Normering</div>
    </h2>
    <a class="positive ui button right" href="/standard/new">Normering Toevoegen</a>
    <div class="ui segment">
      <h4 class="ui right aligned header">
        <i class="youtube icon"></i>
        <div class="content">
          <a href="https://youtu.be/ahbafP_I7uM" target="_blank">Normeringen Toevoegen en Beheren</a>
          <div class="sub header">YouTube Instructie Video</div>
        </div>
      </h4>
    </div>
    <!--divider and then all cards for standards-->
    <div class="ui divider"></div>
    <!--kaarten met normering-->
    <div class="ui six doubling cards">
      <% standards.forEach(function(standard){ %>
      <div class="card">
        <div class="content">
          <div class="header"><a href="/standard/<%=standard._id%>"><%= standard.name %></a></div>
          <div class="description">
            Datum: <%= standard.created.toJSON().slice(0,10).split('-').reverse().join('/') %>
          </div>
        </div>
        <a class="ui bottom attached button" href="/standard/<%=standard._id%>">
          <i class="show icon"></i>
          Bekijk 
        </a>
      </div>
      <% }); %>
    </div>
</div>

<% include ../partials/footer %>