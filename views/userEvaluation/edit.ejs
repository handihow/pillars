<%- include('../partials/header') %>
<%- include('../partials/main-menu') %>
<%- include('../partials/flash-message') %>
<%- include('../partials/user-header') %>
  <h2 class="ui header"><i class="comments icon"></i> Evaluatie van <%= user.username %> Bewerken</h2>
  
  <form class="ui form" action="/user/<%=user._id%>/evaluation/<%=evaluation._id%>?_method=PUT" method="POST" id="evaluationForm" novalidate>
    <div class="field">
      <label>Titel</label>  
      <input type="text" name="evaluation[title]" value="<%=evaluation.title%>" required="" title="Dit veld is verplicht">
    </div>
    <div class="field">
      <label>Rapport van gesprek</label>  
      <textarea name="evaluation[report]"><%=evaluation.report%></textarea>
    </div>
    <div class="field">
      <label>Plan van aanpak</label>  
      <textarea name="evaluation[plan]"><%=evaluation.plan%></textarea>
    </div>
    <button class="ui button" type="submit">Bewaren</button>
  </form>

<%- include('../partials/user-footer') %>
<%- include('../partials/footer') %>