<script>
	$(document).ready(function() {

		if($("#general-tests").length > 0){
	      $("#general-tests").click(function(){
	        $('.ui.modal.general-tests').modal('show');
	      });
	    }

	    if($("#software-assessments").length > 0){
	      $("#software-assessments").click(function(){
	        $('.ui.modal.software-assessments').modal('show');
	      });
	    }

	    if($("#profile-info").length > 0){
	      $("#profile-info").click(function(){
	      	$('.ui.modal.profile-info').modal('show');
	      });
	    }

	    $.get('https://pillars.school/wp-json/wp/v2/posts?per_page=3&_embed', function(data){
	    	data.forEach(function(post){
	    		var image = post._embedded['wp:featuredmedia']['0'].source_url;
	    		if(typeof image =='undefined'){
	    			image = '/img/logo.png';
	    		}
    			$( ".news" ).append( `
	    		<div class="item">
				      <img <img class="ui avatar image" src="
				`
				+ image + 
				`">
				    <div class="content">
				      <a class="header" target="_blank" href="
				`
				+ post.link + `
				">
				` 
				+ post.title.rendered  + `

				</a></div>
				      <div class="description">
				` + post.excerpt.rendered + `</div>
				    
				  </div>
	    		` );
	    		
	    	});
	    	$('#loader').hide();
	    });

	});
</script>