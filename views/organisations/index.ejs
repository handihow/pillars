<%- include('../partials/header') %>
<%- include('../partials/main-menu') %>
<%- include('../partials/flash-message') %>
<%- include('../partials/admin-header') %>

  
  <h2 class="ui center aligned header">
      <div>Besturen</div>
  </h2>
  <a class="ui blue button right" href="/organisations/new">Bestuur toevoegen</a>
  <div class="ui divider"></div>
   
   <table class="ui celled small table">
      <thead>
        <tr>
          <th>Naam</th>
          <th>Adres</th>
          <th>Postcode</th>
          <th>Plaatsnaam</th>
          <th>Land</th>
          <th>Activatiecode</th>
          <th>Geactiveerd</th>
          <th>Bewerken</th>
          <!-- <th>Verwijderen</th> -->
        </tr>
      </thead>
      <tbody>
        <% organisations.forEach(function(organisation){ %>
            <tr>
              <td><a href="/organisations/<%=organisation._id%>"><%=organisation.name%></a></td>
              <td><%=organisation.address%></td>
              <td><%=organisation.postalCode%></td>
              <td><%=organisation.city%></td>
              <td><%=organisation.country%></td>
              <td><%=organisation.activationCode%></td>
              <td><%if(organisation.activated){%>Ja<%}else{%>Nee<%}%></td>
              <td><a href="/organisations/<%=organisation._id%>/edit" class="ui mini blue basic button">Bewerken</a></td>
              
            </tr>
        <% }); %>
      </tbody>
    </table>

<%- include('../partials/admin-footer') %>
<%- include('../partials/footer') %>