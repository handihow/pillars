  <% include ../partials/school-header %>

  <h2 class="ui top attached header">Beveiligingsincident Bewerken van <%= school.name %></h2>
  <form class="ui small form" action="/schools/<%=school._id%>/securityIncident/<%=securityIncident._id%>?_method=PUT" method="POST" id="securityIncidentForm">
<%} else { %>
  <div class="ui container">
    <h2 class="ui top attached header">Beveiligingsincident Bewerken</h2>
    <form class="ui small form" action="/securityIncident/<%=securityIncident._id%>?_method=PUT" method="POST" id="securityIncidentForm">
<% } %>
