<% include ../partials/header %>
<% include ../partials/main-menu %>
<% include ../partials/flash-message %>

<div class="ui container">
    <div class="ui huge header">Profiel Aanpassen</div>
    <div class="ui divider"></div>
    <form class="ui form" action="/user/<%=user._id%>?_method=PUT" method="POST" id="profileForm" novalidate>
        <div class="two fields">
          <div class="field">
              <label>E-mail adres</label>
              <input type="text" name="user[username]" value="<%=user.username%>" id="user[username]">
          </div>
          <div class="field">
              <label>Upload avatar</label>
              <input type="hidden" 
                    role="uploadcare-uploader" 
                    name="user[imageUrl]"
                    value="<%=user.imageUrl%>"
                    data-image-shrink="256x256"
                    data-multiple="false"/>
            </div>
        </div>
        <div class="ui warning message">
          <div class="header">Let op!</div>
          <ul class="list">
            <li>Als je het email adres wijzigt, dan zul je worden uitgelogd en moet je opnieuw inloggen.</li>
          </ul>
        </div>
        <div class="two fields">
          <div class="field">
              <label>Voornaam</label>
              <input type="text" name="user[firstName]" value="<%=user.firstName%>" id="user[firstName]">
          </div>
          <div class="field">
              <label>Achternaam</label>
              <input type="text" name="user[lastName]" value="<%=user.lastName%>" id="user[lastName]">
          </div>
        </div>
        <div class="two fields">
          <div class="field">
              <label>Functie</label>
              <input type="text" name="user[job]" value="<%=user.job%>" id="user[job]">
          </div>
          <div class="inline fields">
            <label>Personeelstype</label>
            <div class="field">
              <div class="ui radio checkbox">
                <input 
                      type="radio" 
                      name="user[isTeacher]" 
                      value="0" 
                      <% if(!user.isTeacher) { %>checked="checked"<% } %>>
                <label>Onderwijsondersteunend</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input 
                      type="radio" 
                      name="user[isTeacher]" 
                      value="1"
                      <% if(user.isTeacher) { %>checked="checked"<% } %>>
                <label>Onderwijzend</label>
              </div>
            </div>
          </div>
        </div>
        <div class="two fields">
          <div class="field">
              <label>Geboortedatum</label>
              <input type="date" name="user[dateOfBirth]" 
                id="user[dateOfBirth]"
                value="<%=user.dateOfBirth? user.dateOfBirth.toISOString().slice(0,10) : null %>">
          </div>
          <div class="field">
              <label>Geslacht</label>
              <div class="ui selection dropdown">
                  <input type="hidden" name="user[gender]" id="dropdown" value="<%=user.gender%>">
                  <div class="text"><%=user.gender%></div>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                        <div class="item <%if(user.gender==="M"){%>active<%}%>"
                            data-value="M"
                          <% if(user.gender==="M"){ %> selected="" <% } %> >
                              Man
                        </div>
                        <div class="item <%if(user.gender==="V"){%>active<%}%>"
                            data-value="V"
                          <% if(user.gender==="V"){ %> selected="" <% } %> >
                              Vrouw
                        </div>
                  </div>
              </div>
          </div>
        </div>
        <div class="two fields">
          <div class="field">
              <label>Bouw</label>
              <div class="ui selection dropdown">
                  <input type="hidden" name="user[gradeLevelGroup]" id="dropdown" value="<%=user.gradeLevelGroup%>">
                  <div class="text"><%=user.gradeLevelGroup%></div>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                        <div class="item <%if(user.gradeLevelGroup==="Onderbouw"){%>active<%}%>"
                            data-value="Onderbouw"
                          <% if(user.gradeLevelGroup==="Onderbouw"){ %> selected="" <% } %> >
                              Onderbouw
                        </div>
                        <div class="item <%if(user.gradeLevelGroup==="Middenbouw"){%>active<%}%>"
                            data-value="Middenbouw"
                          <% if(user.gradeLevelGroup==="Middenbouw"){ %> selected="" <% } %> >
                              Middenbouw
                        </div>
                        <div class="item <%if(user.gradeLevelGroup==="Bovenbouw"){%>active<%}%>"
                            data-value="Bovenbouw"
                          <% if(user.gradeLevelGroup==="Bovenbouw"){ %> selected="" <% } %> >
                              Bovenbouw
                        </div>
                  </div>
              </div>
          </div>
          <div class="inline fields">
            <label>Ik geef mijn leidinggevende en ICT'er inzage in mijn profiel</label>
            <div class="field">
              <div class="ui radio checkbox">
                <input 
                      type="radio" 
                      name="user[publicProfile]" 
                      value="0" 
                      <% if(!user.publicProfile) { %>checked="checked"<% } %>>
                <label>Nee</label>
              </div>
            </div>
            <div class="field">
              <div class="ui radio checkbox">
                <input 
                      type="radio" 
                      name="user[publicProfile]" 
                      value="1"
                      <% if(user.publicProfile) { %>checked="checked"<% } %>>
                <label>Ja</label>
              </div>
            </div>
          </div>
        </div>
    <button class="ui red basic button" type="button" onclick="goBack()">Annuleren</button>
    <button class="ui button" type="submit">Bewaren</button>
    <div class="ui error message"></div>
    </form>
    
</div>
        
<% include ../partials/footer %>