<% include ./partials/main/header %>

<div class="container" id="register">
    <h2>Aanmelden bij Pillars</h2>
    <form action="/register" method="post" id="registerValidation" novalidate>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="firstName">Voornaam</label>
            <input type="text" name="firstName" class="form-control" id="firstName" placeholder="Voornaam" title="Vul je voornaam in." required>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="lastName">Achternaam</label>
            <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Achternaam" title="Vul je achternaam in." required>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="email">Email adres</label>
            <input type="email" name="username" class="form-control" id="useremail" placeholder="Email adres" title="Vul een geldig email adres in." required>
            <small id="emailHelp" class="form-text text-muted">We delen je email met niemand!</small>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="organisatie">Organisatie</label>
            <select class="form-control" id="organisatie" name="organisation">
              <option>Selecteer organisatie</option>
              <% for (i = 0; i < organisations.length; i++) {  %>
              <option value="<%=organisations[i]._id%>"><%=organisations[i].name%> - <%=organisations[i].city%></option>
              <% } %>
            </select>
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="activationCode">Activatie Code</label>
            <input type="text" name="activationCode" class="form-control" id="activationCode" placeholder="Activatie Code" title="Vul de activatie code in" required>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="password">Wachtwoord</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Wachtwoord" title="Minimum 8 characters">
          </div>
        </div>
        <div class="col">
          <div class="form-group">
            <label for="password_again">Controleer Wachtwoord</label>
            <input name="password_again" type="password" class="form-control" id="password_again" placeholder="Herhaal Wachtwoord" title="Vul hetzelfde wachtwoord nogmaals in">
          </div>
        </div>
      </div>
      <input type="text" name="role" class="form-control" value="badmin" hidden="true">
      <fieldset disabled>
        <div class="form-check">
          <label class="form-check-label">
            <input type="checkbox" class="form-check-input" checked="checked">
            Ik ga akkoord met de <a href="https://pillars.school/algemene-voorwaarden/">voorwaarden van Pillars</a>
          </label>
        </div>
      </fieldset>
      <button type="submit" class="btn btn-primary">Aanmelden</button>
    </form>
    <h6>Heb je al een account? <a href="/login">Log in bij Pillars!</a></h6>
</div> 

  
