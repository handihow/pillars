  <div class="field">
    <label>Postcode en Plaatsnaam</label>
        <div class="fields">
            <div class="four wide field">
                <input type="text" name="processingActivity[jointControllerOrganisationPostalCode]"  
                  value="<%=processingActivity.jointControllerOrganisationPostalCode%>">
            </div>
            <div class="twelve wide field">
                <input type="text" name="processingActivity[jointControllerOrganisationCity]"  
                    value="<%=processingActivity.jointControllerOrganisationCity%>">
            </div>
        </div>
  </div>
  <div class="field">
    <label>Gegevens organisatie</label>
        <div class="fields">
            <div class="four wide field">
                <input type="text" name="processingActivity[jointControllerOrganisationChamberOfCommerceNumber]"  
                    value="<%=processingActivity.jointControllerOrganisationChamberOfCommerceNumber%>">
            </div>
            <div class="twelve wide field">
                <input type="text" name="processingActivity[jointControllerOrganisationLegalForm]"  
                    value="<%=processingActivity.jointControllerOrganisationLegalForm%>">
            </div>
