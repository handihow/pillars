<% include ../partials/school/header %>

<div class="ui container">
  
  <h2 class="ui center aligned header">
      <div>Bestuur Medewerkers</div>
  </h2>
  <a class="positive ui button right" href="/buser/new/">Medewerker Toevoegen met Email/Wachtwoord</a>
  <a class="positive ui button right" href="/buser/newSocial/">Medewerker Toevoegen met Schoolaccount</a>
  <div class="ui divider"></div>
    <div class="ui cards">
      <!--make a card for each buser-->
      <% users.forEach(function(user){ %>
      <div class="card">
        <div class="content">
          <div class="header"><%=user.firstName %> <%=user.lastName %></div>
          <div class="description">
                <%=user.username%>
          </div>
          <div class="description">
                <%if(user.role==="badmin"){%>Bestuur Admin<%}else{%>Bestuur User<%}%>
          </div>
        </div>
        <div class="ui bottom attached button">
          <form id="delete" 
              action="/buser/<%=user._id%>?_method=DELETE" method="POST">
              <button class="ui red basic button">Verwijderen</button>
          </form>
        </div>
      </div>
      <% }); %>
    </div>
</div>
  
<% include ../partials/school/footer %>
